<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AccountItemStyle">
        <item name="android:layout_margin">1dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:padding">12dp</item>
    </style>
    <style name="DeviceButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">40px</item>
        <item name="backgroundTint"     >@color/menu_icon_color     </item><!-- Основной цвет фона -->
        <item name="android:textColor"  >@color/teal_700            </item><!-- Цвет текста -->
        <item name="iconTint"           >@color/colorPrimaryDark    </item> <!-- Цвет иконки -->
        <item name="strokeColor"        >@color/teal_200            </item><!-- Цвет обводки -->
        <item name="cornerRadius">8dp</item> <!-- Радиус скругления -->
        <item name="strokeWidth">1dp</item>
    </style>
</resources>

